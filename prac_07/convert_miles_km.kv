BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0.0'
            font_size: 48
            multiline: False
            on_text: app.handle_calculation(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: '+1'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: '-1'
                on_press: app.handle_increment(input_miles.text, -1)


    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Convert miles to kilometres'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculation(self.text)
        Label:
            id: output_label
            text: app.output_km
            font_size: 48
            color: (0, 1, 1, 1)
